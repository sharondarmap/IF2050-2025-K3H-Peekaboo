<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox alignment="CENTER_LEFT" prefHeight="96.0" style="-fx-background-color: white; -fx-border-color: #E2E2E2; -fx-border-width: 0 0 1 0;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pekaboo.features.navbar.NavbarController">
    <padding>
        <Insets bottom="24.0" left="72.0" right="72.0" top="24.0" />
    </padding>
    <children>
        <ImageView fx:id="logoImageView" fitHeight="48.0" pickOnBounds="true" preserveRatio="true" />
        <Pane HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER" spacing="40.0">
            <children>
                <Button fx:id="homeButton" onAction="#handleNavigation" styleClass="nav-button" text="Home">
                    <userData>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="/com/pekaboo/home/Home.fxml" />
                            <String fx:value="null" />
                        </FXCollections>
                    </userData>
                </Button>
                <Button fx:id="reservationButton" onAction="#handleNavigation" styleClass="nav-button" text="Reservation">
                     <userData>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="placeholder" />
                            <String fx:value="null" />
                        </FXCollections>
                    </userData>
                </Button>
                <Button fx:id="catalogButton" onAction="#handleNavigation" styleClass="nav-button" text="Catalog">
                     <userData>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="/com/pekaboo/pembelian/CatalogProduct.fxml" />
                            <String fx:value="/com/pekaboo/pembelian/catalog.css" />
                        </FXCollections>
                    </userData>
                </Button>
                <Button fx:id="historyButton" onAction="#handleNavigation" styleClass="nav-button" text="History">
                     <userData>
                        <FXCollections fx:factory="observableArrayList">
                             <String fx:value="placeholder" />
                            <String fx:value="null" />
                        </FXCollections>
                    </userData>
                </Button>
                
                <ImageView fx:id="profileImageView" onMouseClicked="#handleProfileClick" fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                </ImageView>
            </children>
        </HBox>
    </children>
</HBox>