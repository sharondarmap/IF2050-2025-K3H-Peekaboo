<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #FAFAFA;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pekaboo.features.home.MainController">
    
    <top>
        <fx:include fx:id="navbar" source="../navbar/Navbar.fxml" />
    </top>

    <center>
        <ScrollPane fx:id="contentScrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox>
                    <children>
                        <AnchorPane fx:id="contentArea" />
                        
                        <fx:include source="/com/pekaboo/footer/Footer.fxml" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>