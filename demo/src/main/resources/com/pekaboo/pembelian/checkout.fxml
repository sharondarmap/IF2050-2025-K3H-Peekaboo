<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pekaboo.features.pembelian.CheckoutController" stylesheets="@checkout.css" spacing="10" alignment="TOP_LEFT" prefWidth="800" prefHeight="600">

    <!-- Daftar Produk di Keranjang -->
    <VBox fx:id="cartItemsContainer">
        <!-- Produk akan ditambahkan secara dinamis di sini -->
        <Label fx:id="emptyCartLabel" text="No items in the cart" visible="true"/>
    </VBox>

    <HBox fx:id="mainContainer" styleClass="main-container" spacing="20" style="-fx-border-color: black; -fx-border-width: 2;">
        <!-- Container gambar -->
        <VBox fx:id="imageContainer" styleClass="image-container" prefWidth="610" prefHeight="537" style="-fx-border-color: blue; -fx-border-width: 2;">
            <ImageView fx:id="productImageView" fitWidth="600" fitHeight="500" preserveRatio="true"/>
        </VBox>
        <!-- Container tombol dan info -->
        <VBox fx:id="buttonContainer" styleClass="button-container" prefWidth="640" spacing="40" style="-fx-border-color: red; -fx-border-width: 2;" alignment="TOP_LEFT">
            <!-- Pastikan TIDAK ada VBox.margin/Insets di antara label berikut -->
            <VBox spacing="0" alignment="CENTER_LEFT">
                <Label fx:id="productBrandLabel" styleClass="product-brand-label" text="Brand"/>
                <Label fx:id="productNameLabel" styleClass="product-name-label" text="Nama Produk"/>
            </VBox>
            <Label fx:id="productPriceLabel" styleClass="product-price-label" text="Rp 0" />
            <!-- Tambahkan pilihan Size & Color di sini -->
            <HBox spacing="20">
                <!-- Size -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Available Size" />
                    <HBox spacing="10">
                        <Button fx:id="sizeSmall" text="S" styleClass="primaryButton" />
                        <Button fx:id="sizeMedium" text="M" styleClass="primaryButton" />
                        <Button fx:id="sizeLarge" text="L" styleClass="primaryButton" />
                    </HBox>
                </VBox>
                <!-- Color -->
                <VBox spacing="5">
                    <Label text="Available Colors" />
                    <HBox spacing="10">
                        <Rectangle fx:id="colorBlack" width="40" height="40" styleClass="color-circle" style="-fx-fill: black;" onMouseClicked="#handleColorBlackClicked" />
                        <Rectangle fx:id="colorBrown" width="40" height="40" styleClass="color-circle" style="-fx-fill: #6C4400;" onMouseClicked="#handleColorBrownClicked" />
                    </HBox>
                </VBox>
            </HBox>
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button fx:id="minusPrescriptionButton" text="â€“" styleClass="round-button" prefHeight="46" />
                <Label fx:id="prescriptionQuantityLabel" text="1" styleClass="quantity-box-label" alignment="CENTER" />
                <Button fx:id="plusPrescriptionButton" text="+" styleClass="round-button" prefHeight="46" />
                <Button fx:id="addPrescriptionButton" text="Add Prescription" styleClass="primaryButton" prefHeight="46" />
            </HBox>
            <Button fx:id="checkoutButton" text="Checkout" onAction="#handleCheckout" styleClass="primaryButton" />
        </VBox>
    </HBox>
</VBox>